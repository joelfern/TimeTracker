{
	"arrowParens": "always",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"semi": true,
	"singleQuote": false,
	"trailingComma": "none",
	"tabWidth": 4,
	"useTabs": true,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		},
		{
			"files": [".prettierrc", "*.js", "*.json", "*.ts"],
			"options": {
				"tabWidth": 2
			}
		},
		{
			"files": "*.py",
			"options": {
				"useTabs": false
			}
		},
		{
			"files": ["*.rb", "*.yml"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
